# Non-secret defaults (override with values in .env for secrets or machine-specific tweaks)
STT_SAMPLE_RATE=16000
STT_MODEL_SIZE=tiny
STT_DURATION=50
CHUNK_SIZE=4096

# Streaming STT tuning
STT_WINDOW_SEC=3.0
STT_OVERLAP_SEC=0.7

# Noise / text filters
STT_MIN_WINDOW_RMS=0.005
STT_MIN_TEXT_CHARS=5

# Data paths (relative to project root by default)
DATA_DIR=data
DB_PATH=data/journal.sqlite
